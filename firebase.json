{
  "hosting": {
    "site": "feraset-imagen",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/createGenerationRequest",
        "function": "createGenerationRequest"
      },
      {
        "source": "/api/getGenerationStatus",
        "function": "getGenerationStatus"
      },
      {
        "source": "/api/getGenerationRequest",
        "function": "getGenerationRequest"
      },
      {
        "source": "/api/getUserCredits",
        "function": "getUserCredits"
      },
      {
        "source": "/api/seed_database",
        "function": "seed_database"
      },
      {
        "source": "/api/scheduleWeeklyReport",
        "function": "scheduleWeeklyReport"
      },
      {
        "source": "/api/validate_user",
        "function": "validate_user"
      },
      {
        "source": "/api/processImageGeneration",
        "function": "processImageGeneration"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5551
    },
    "firestore": {
      "port": 5561
    },
    "hosting": {
      "port": 8888
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "tasks": {
      "port": 9499
    }
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "runtime": "python313"
    }
  ]
}
